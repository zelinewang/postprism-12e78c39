{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install -r requirements.txt"
  },
  "deploy": {
    "startCommand": "python run_fixed.py",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "environments": {
    "production": {
      "variables": {
        "FLASK_ENV": "production",
        "FLASK_DEBUG": "false",
        "FLASK_HOST": "0.0.0.0",
        "FLASK_PORT": "$PORT",
        "CORS_ORIGINS": "https://postprism.lovable.app,https://lovable.dev",
        "LOG_LEVEL": "INFO"
      }
    }
  }
}